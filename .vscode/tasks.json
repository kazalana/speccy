{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build current file",
      "type": "shell",
      "command": "${workspaceFolder}/tools/sjasmplus.exe",
      "args": [
        "--fullpath",
        "--sld=.build/current_file_build/${fileBasenameNoExtension}.sld",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },

    {
      "label": "Build draw_sprite.bin",
      "type": "shell",
      "command": "${workspaceFolder}/tools/sjasmplus.exe",
      "args": [
        "--fullpath",
        "--sld=.build/vid_out/draw_sprite.sld",
        "--exp=.build/vid_out/draw_sprite.exp",
        "vid_out/draw_sprite_build.asm"
      ],

      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "Build smiley main",
      "type": "shell",
      "command": "${workspaceFolder}/tools/sjasmplus.exe",
      "args": [
        "--fullpath",
        "--sld=.build/smiley/main.sld",
        "--exp=.build/smiley/main.exp",
        "smiley/main.asm"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Build draw_sprite.bin"
      ]
    },
    {
      "label": "Load main.bin via ZRCP",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "load_bin.ps1"
      ],
      "problemMatcher": []
    },

    {
      "label": "Generate video_line_table.inc",
      "type": "shell",
      "command": "python3",
      "args": [
        "${workspaceFolder}/tools/utils/generate_video_line_table.py"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },

    {
      "label": "Build tetris main",
      "type": "shell",
      "command": "${workspaceFolder}/tools/sjasmplus.exe",
      "args": [
        "--fullpath",
        "--sld=.build/tetris/main.sld",
        "--exp=.build/tetris/main.exp",
        "tetris/main.asm"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Build common.bin"
      ]
    },

    {
      "label": "Build common.bin",
      "type": "shell",
      "command": "${workspaceFolder}/tools/sjasmplus.exe",
      "args": [
        "--fullpath",
        "--sld=.build/common/common.sld",
        "--exp=.build/common/common.exp",
        "common/_build.asm"
      ],

      "group": "build",
      "problemMatcher": []
    },
  ]
}