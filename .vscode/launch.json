{
  "configurations": [
    {
      "type": "dezog",
      "request": "launch",
      "name": "Debug Smiley",
      "remoteType": "zrcp",
      "zrcp": {
        "hostname": "localhost",
        "port": 10000
      },
      
      "sjasmplus": [
        {
          "path": ".build/smiley/main.sld",
          "asm": "sjasmplus",
          "mainFile": "${file}"
        },
        {
          "path": ".build/vid_out/draw_sprite.sld",
          "asm": "sjasmplus",
          "mainFile": "vid_out/vid_out/draw_sprite.asm"
        }
      ],

      "rootFolder": "${workspaceFolder}",
      "load": ".build/smiley/main.sna",
      "preLaunchTask": "Build smiley main",
      "startAutomatically": true
    },

    {
      "type": "dezog",
      "request": "launch",
      "name": "Debug Tetris",
      "remoteType": "zrcp",
      "zrcp": {
        "hostname": "localhost",
        "port": 10000
      },
      
      "sjasmplus": [
        {
          "path": ".build/tetris/main.sld",
          "asm": "sjasmplus",
          "mainFile": "${file}"
        },
        {
          "path": ".build/common/common.sld",
          "asm": "sjasmplus",
          "mainFile": "common/common.asm"
        }
      ],

      "rootFolder": "${workspaceFolder}",
      "load": ".build/tetris/main.sna",
      "preLaunchTask": "Build tetris main",
      "startAutomatically": true
    }
  ]
}
